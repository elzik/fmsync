<?define Name = "fmsync" ?>
<?define Manufacturer = "Elzik" ?>
<?define Version = "$(var.GitVersion_MajorMinorPatch)" ?>
<?define SemanticVersion = "$(var.GitVersion_SemVer)" ?>
<?define UpgradeCode = "72617562-fb47-49e4-81ba-43bb876cbfac" ?>

<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs"
     xmlns:ui="http://wixtoolset.org/schemas/v4/wxs/ui">
	<Package Name="$(Name) v$(SemanticVersion)"
	         Manufacturer="$(Manufacturer)"
	         Version="$(Version)"
	         UpgradeCode="$(var.UpgradeCode)"
	         Compressed="true">
		
		<MediaTemplate EmbedCab="yes" />
	    <MajorUpgrade DowngradeErrorMessage="!(loc.DowngradeError)" />

	    <WixVariable Id="WixUILicenseRtf" Value="LICENSE.rtf" />
		<ui:WixUI Id="WixUI_FeatureTree" />

	    <Feature Id="Worker" Title="Service Setup" Level="1" AllowAbsent ="true">
			<ComponentGroupRef Id="Worker" />
	    </Feature>

	    <Feature Id="Console" Title="Command Line Setup" Level="1" AllowAbsent ="true">
		    <ComponentGroupRef Id="Console" />
	    </Feature>

		<Binary Id="CustomActions" SourceFile=
				"..\Elzik.FmSync.WindowsInstaller.CustomActions\bin\x64\Release\net472\win-x64\Elzik.FmSync.WindowsInstaller.CustomActions.CA.dll" />

		<CustomAction Id="TestCustomAction"
					  BinaryRef="CustomActions"
					  Execute="deferred"
					  Impersonate="false"
					  DllEntry="TestCustomAction"
					  Return="check" />
		<CustomAction Id="SetWorkerInstallFolder" 
					  Property="TestCustomAction" 
					  Value="WorkerInstallFolder=[WORKER_INSTALLFOLDER]" />

		<InstallExecuteSequence>
			<Custom Action="SetWorkerInstallFolder" After="CreateFolders"/>
			<Custom Action="TestCustomAction" Before="StartServices" />
		</InstallExecuteSequence>

  </Package>
</Wix>
